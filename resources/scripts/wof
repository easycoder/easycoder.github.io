	div Body
    div Container
    canvas Canvas
    wheel Wheel
    button Spin
    
    create Body
    
    create Container in Body
    set the style of Container to
        `position:relative;width:100%;padding-top:100%`
    create Canvas in Container
    set the style of Canvas to
    	`position:absolute;top:0;width:100%;height:100%`
    draw Wheel in Canvas
    
    create Spin in Body
    set the style of Spin to `font-size:3em;width:80%;margin:0 auto`
    set the text of Spin to `Spin`
    on click Spin spin Wheel

    stop