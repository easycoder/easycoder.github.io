!	Drop-down List

	div Container
    div Prompt
    select Month
    variable MonthList
    
    clear MonthList
    json add `January` to MonthList
    json add `February` to MonthList
    json add `March` to MonthList
    json add `April` to MonthList
    json add `May` to MonthList
    json add `June` to MonthList
    json add `July` to MonthList
    json add `August` to MonthList
    json add `September` to MonthList
    json add `October` to MonthList
    json add `November` to MonthList
    json add `December` to MonthList
    
    create Container
    set the style of Container to `margin:2em 0 0 2em`
    create Prompt in Container
    set the style of Prompt to `margin-bottom:1em`
    set the content of Prompt to `Choose a month:`
    create Month in Container
    set Month from MonthList as `January`
    on change Month
    begin
    	alert `You chose ` cat Month
    end
    
    stop